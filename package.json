{
  "name": "@fifthrevision/axle",
  "version": "0.5.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/johncch/axle.git"
  },
  "description": "axle is a command line tool for running workflows against LLM APIs.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "axle": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsx ./src/cli.ts",
    "build": "pkgroll --clean-dist --minify",
    "build-dev": "pkgroll --clean-dist",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "get-models": "npx tsx scripts/getModels.ts",
    "prompt-scenarios": "npx tsx ./scripts/prompt.scenarios.ts",
    "test-providers": "npx tsx ./scripts/testProviders.ts",
    "smoketest": "npx tsx ./scripts/smoketest.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.63.1",
    "@commander-js/extra-typings": "^14.0.0",
    "@google/genai": "^1.20.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "glob": "^11.0.3",
    "openai": "^5.23.0",
    "serialize-error": "^12.0.0",
    "yaml": "^2.8.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "dotenv": "^17.2.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "pkgroll": "^2.15.4",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "ts-jest": "^29.4.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
